{
    "name": "ignition-studios/config",
    "type": "library",
    "minimum-stability": "stable",
    "description": "Simple array config access",
    "keywords": [],
    "homepage": "https://github.com/ignition-studios/config",
    "license": "proprietary",
    "authors": [
        {
            "name": "Ian Grindley",
            "email": "ian@igniton-studios.com"
        }
    ],
    "require": {
        "php": "~7.4 || ~8.0",
        "adbario/php-dot-notation": "~2.2 || ~3.1",
        "ignition-studios/interfaces": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Ignite\\Config\\": "src/Config/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://pkgs.ignition-studios.com"
        }
    ],
    "scripts": {
        "analyse": "phpstan analyse src/Config --level=6",
        "api-docs": "php /opt/local/bin/doctum update ./doctum.config.php", 
        "user-docs": "mkdocs build", 
        "user-docs-serve": "mkdocs serve", 
        "test-all": "phpunit --coverage-clover build/logs/clover.xml"
    }
}
